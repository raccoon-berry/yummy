<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="berry.yummy.ResultActivity">

    <TextView
        android:id="@+id/result_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="@+string/result_top_text"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#696969"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yummy_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textSize="250sp"
        android:textColor="#696969"
        android:textStyle="bold" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/result_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="記録する"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_type="success" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/to_top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/to_top_button"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_type="warning" />

</LinearLayout>
